<?xml version="1.0"?>
<config>
    <modules>
        <Juno_Image>
            <version>0.1.0</version>
        </Juno_Image>
    </modules>
    <global>
        <models>
            <juno_image>
                <class>Juno_Image_Model</class>
            </juno_image>
        </models>
        <blocks>
            <juno_image>
                <class>Juno_Image_Block</class>
            </juno_image>
        </blocks>
        <helpers>
            <juno_image>
                <class>Juno_Image_Helper</class>
            </juno_image>
        </helpers>
        <resources>
            <juno_image_setup>
                <setup>
                    <module>Juno_Image</module>
                </setup>
            </juno_image_setup>
        </resources>

    </global>
    <crontab>
        <jobs>
            <juno_optimize_image>
                <schedule>
                    <cron_expr>0 0 * * *</cron_expr>
                    <config_path>
                        <model>juno_image/observer::optimizeImages</model>
                    </config_path>
                </schedule>
            </juno_optimize_image>
        </jobs>
    </crontab>
</config>